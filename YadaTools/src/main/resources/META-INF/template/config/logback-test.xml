<!-- Logback configuration for development environments -->
<configuration scan="true" scanPeriod="5 seconds" debug="false">
	<logger name="ch.qos.logback" level="warn"/>

	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>$basePath/$acronym$env/log/site.log</file>
	 	<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
	    	<fileNamePattern>$basePath/$acronym$env/log/site.%i.log</fileNamePattern>
			<minIndex>1</minIndex>
			<maxIndex>9</maxIndex>
	    </rollingPolicy>
    	<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      		<maxFileSize>20MB</maxFileSize>
    	</triggeringPolicy>
		<encoder>
			<pattern>%d :%X{session}:%X{remoteIp}:%X{username} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>dev %d{HH:mm:ss} %-5level %logger{36} - %X{mdc}: %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="SEC" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>$basePath/$acronym$env/log/sec.log</file>
	 	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	    	<fileNamePattern>$basePath/$acronym$env/log/sec.%d.log</fileNamePattern>
			<maxHistory>7</maxHistory>
	    </rollingPolicy>
		<encoder>
			<pattern>%d :%X{session}:%X{remoteIp}:%X{username} [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>

