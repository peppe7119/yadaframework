<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
   version="3.0">

<!-- Pagina di default per tutti gli errori non gestiti diversamente -->   
<error-page>
	<location>/error</location>
</error-page>

<session-config>
	<!-- ATTENZIONE: questo va tenuto allineato con conf.webapp.xml altrimenti la sessione potrebbe non scadere mai -->
  <session-timeout>240</session-timeout> <!-- 240 Minuti -->
</session-config>

</web-app>